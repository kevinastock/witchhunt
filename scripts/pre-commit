#!/bin/bash
set -euf -o pipefail

. envs/dev/bin/activate

echo "black..."
black witchhunt/

echo ""
echo "flake8..."
flake8 witchhunt/

echo ""
echo "jslint..."
yarn jshint -c .jshint frontend/witchhunt.js

echo ""
echo "js-beautify"
yarn js-beautify --replace --end-with-newline frontend/witchhunt.js
